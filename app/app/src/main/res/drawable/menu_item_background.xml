<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DCE8F6" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="12dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
            <corners android:radius="12dp" /> <!-- Bo góc -->
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Viền nhẹ -->
        </shape>
    </item>
</selector>
